<% include inc/view_header %>
<% include inc/view_topmenu %>
<% include inc/view_sidebar %>

<div id="page-wrapper">

    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header text-center">
                    Add User
                </h1>
            </div>
        </div>
        <!-- /.row -->

        <div class="row">
            <div class="col-lg-5 col-lg-offset-3">

                <form action="" method="POST">
                    <div class="form-group">
                        <label for="med_name">Name</label>
                        <input type="text" class="form-control" id="name" name="name"
                               placeholder="Name" required autofocus>
                    </div>
                    <div class="form-group">
                        <label for="med_category">Email</label>
                        <input type="email" class="form-control" id="email" name="email"
                               placeholder="Email" required>
                    </div>
                     <div class="form-group">
                        <label for="user_dob">Date of Birth</label>
                        <input type="text" class="form-control" name="user_dob" id="user_dob"  onkeydown="return false" required>
                    </div>
                    <div class="form-group">
                        <label for="user_gender">Gender &nbsp;&nbsp;</label><br/>
                        <label class="radio-inline"><input type="radio" name="gender" value="Male" required>Male</label>
                        <label class="radio-inline"><input type="radio" name="gender" value="Female">Female</label>
                    </div>
                    <div class="form-group">
                        <label for="med_name">Age</label>
                        <input type="text" class="form-control" id="age" name="age"
                               placeholder="Age" required>
                    </div>
                    <div class="form-group">
                        <label for="med_name">Address</label>
                        <input type="text" class="form-control" id="address" name="address"
                               placeholder="Address" required>
                    </div>
                    <div class="form-group">
                        <label for="med_name">Contact</label>
                        <input type="text" class="form-control" id="contact" name="contact"
                               placeholder="Contact" required>
                    </div>
                    <div class="form-group">
                        <label for="blood_group">Blood Group</label>
                        <select class="form-control" id="blood_group" name="blood_group" required>
                            <option value="" disabled>Select Blood Group</option>
                            <option value="A+">A+</option>
                            <option value="A-">A-</option>
                            <option value="B+">B+</option>
                            <option value="B-">B-</option>
                            <option value="0+">O+</option>
                            <option value="0-">O-</option>
                            <option value="AB+">AB+</option>
                            <option value="AB-">AB-</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="user_gender">Marital Status &nbsp;&nbsp;</label><br/>
                        <label class="radio-inline"><input type="radio" required name="marital_status" value="Married" required>Married</label>
                        <label class="radio-inline"><input type="radio" name="marital_status" value="Unmarried">Unmarried</label>
                    </div>

                    <div class="form-group">
                        <label for="user_dob">Join Date</label>
                        <input type="text" class="form-control" name="join_date" id="join_date"  onkeydown="return false" required>
                    </div>

                    <div class="form-group">
                        <label for="med_name">Salary</label>
                        <input type="text" class="form-control" id="salary" name="salary"
                               placeholder="Salary" required>
                    </div>
                    <div class="form-group">
                        <label for="med_name">Username</label>
                        <input type="text" class="form-control" id="username" name="username"
                               placeholder="Username" required>
                    </div>

                    <div class="form-group">
                        <label for="med_name">Password</label>
                        <input type="text" class="form-control" id="password" name="password"
                               placeholder="Password" required>
                    </div>
                    <div class="form-group">
                        <label for="user_gender">Role &nbsp;&nbsp;</label><br/>
                        <label class="radio-inline"><input type="radio" name="usertype" value="Admin" required>Admin</label>
                        <label class="radio-inline"><input type="radio" checked name="usertype" value="Staff">Staff</label>
                    </div>

                    <input type="submit" class="btn btn-primary" name="submit" value="Create">
            </form>
            </div>
        </div>
        <br />
        <br />
        <div class="container" style="float: left; font-size:17px;">
          <a href="/admin/usermanagement">Back to List </a>
        </div>
        <!-- /.row -->
        <br>
        <hr>

    </div>
    <!-- /.container-fluid -->
    
</div>
<!-- /#page-wrapper -->

