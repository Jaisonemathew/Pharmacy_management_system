<% include inc/view_header %>
<% include inc/view_topmenu %>
<% include inc/view_sidebar %>

<div id="page-wrapper">

    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header text-center">
                    Add Medicine
                </h1>
            </div>
        </div>
        <!-- /.row -->

        <div class="row">
            <div class="col-lg-5 col-lg-offset-3">

                <form action="" method="POST">
                    <div class="form-group">
                        <label for="med_name">Medicine Name</label>
                        <input type="text" class="form-control" id="medicine_name" name="medicine_name"
                               placeholder="Medicine Name">
                </div>

                <div class="form-group">
                    <label for="category">Category</label>
                    <select class="form-control" id="category" name="category" required>
                    <option value="" disabled selected hidden> Select Category</option>
                    <% categoryname.forEach(function(item){ %>
                    <option value="<%= item.ID %>"> <%= item.Category %> </option>
                    <% }) %>
                </select>
                </div>

                    <div class="form-group">
                        <label for="generic_Name">Generic Name</label>
                        <select class="form-control" id="generic_name" name="generic_name" required>
                        <option value="" disabled selected hidden> Select Generic Name </option>
                        <% genericname.forEach(function(item){ %>
                        <option value="<%= item.ID %>"> <%= item.Generic_Name %> </option>
                        <% }) %>
                    </select>
                  </div>

                    <div class="form-group">
                        <label for="supplier_name">Manufacturer Name</label>
                        <select class="form-control" id="manufacturer_name" name="manufacturer_name" required>
                        <option value="" disabled selected hidden> Select Manufacturer Name </option>
                        <% manufacturername.forEach(function(item){ %>
                        <option value="<%= item.ID %>"> <%= item.Manufacturer_Name %> </option>
                        <% }) %>
                        </select>
                    </div>
                    <input type="submit" class="btn btn-primary" name="submit" value="Create">
            </form>

            <% include inc/alert_msg.ejs %>

            </div>
        </div>
        <br />
        <br />
        <div class="container" style="float: left; font-size:17px;">
          <a href="/admin/medicine">Back to List </a>
        </div>
        <!-- /.row -->
        <br>
        <hr>

    </div>
    <!-- /.container-fluid -->


</div>
<!-- /#page-wrapper -->

<% include inc/view_footer.ejs %>
