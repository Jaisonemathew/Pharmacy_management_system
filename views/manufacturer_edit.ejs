<% include inc/view_header %>
    <% include inc/view_topmenu %>
        <% include inc/view_sidebar %>

            <div id="page-wrapper">

                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="row">
                        <div class="col-lg-12">
                            <h1 class="page-header text-center">
                                Edit Supplier
                            </h1>
                        </div>
                    </div>
                    <!-- /.row -->

                    <div class="row">
                        <div class="col-lg-5 col-lg-offset-3">

                            <form action="" method="post">
                                <div class="form-group">
                                    <label for="med_name">Manufacturer Name</label>
                                    <input type="text" class="form-control" id="manufacturer_name" name="manufacturer_name" value="<%= manufacturerNameEdit.Manufacturer_Name %>">
                                </div>
                                <br/>
                                <input type="submit" class="btn btn-primary" name="submit" value="Update">
                            </form>

                            <br><br>

                            <!-- alert box -->
                            <% if (message) { %>
                                <div class="alert <%= message_type %>">
                                    <strong><%= message %></strong>
                                </div>
                                <% } %>
                                    <!-- end of alert box -->

                                    <!-- error alert box -->
                                    <% if (errors) { %>
                                        <ul style="padding-left: 0">
                                            <% errors.forEach(function(err){ %>
                                                <!-- alert box -->
                                                <li style="list-style: none;">
                                                    <div class="alert alert-danger">
                                                        <strong><%= err.msg %></strong>
                                                    </div>
                                                </li>
                                                <!-- end of alert box -->
                                                <% }) %>
                                        </ul>
                                        <% } %>
                                            <!-- error alert box-end -->

                        </div>
                    </div>

                    <br />
                    <br />
                    <div class="container" style="float: left; font-size:17px;">
                        <a href="/admin/supplier">Back to List </a>
                    </div>
                    <!-- /.row -->
                    <br>
                    <hr>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- /#page-wrapper -->

            <% include inc/view_footer.ejs %>