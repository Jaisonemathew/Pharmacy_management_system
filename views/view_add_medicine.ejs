<% include inc/view_header %>
<% include inc/view_topmenu %>
<% include inc/view_sidebar %>
<div id="page-wrapper">

    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header text-center">
                    Add Medicine
                </h1>
            </div>
        </div>
        <!-- /.row -->

        <div class="row">
            <div class="col-lg-5 col-lg-offset-3">

                <form action="/admin/add_medicine" method="post">
                    <div class="form-group">
                        <label for="med_name">Medicine Name</label>
                        <input type="text" class="form-control" id="med_name" name="med_name"
                               placeholder="Medicine Name">
                    </div>
                    <div class="form-group">
                        <label for="med_category">Category</label>
                        <input type="text" class="form-control" name="med_category" id="med_category"
                               placeholder="Category">
                    </div>
                    <div class="form-group">
                        <label for="gen_name">Generic Name</label>
                        <input type="text" class="form-control" name="gen_name" id="gen_name"
                               placeholder="Generic Name">
                    </div>
                    <div class="form-group">
                        <label for="manu_name">Manufacturer Name</label>
                        <input type="text" class="form-control" name="manu_name" id="manu_name"
                               placeholder="Manufacturer Name">
                    </div>
                    <input type="submit" class="btn btn-default" name="submit" value="Add">
                </form>

            </div>
        </div>
        <!-- /.row -->
        <br>
        <hr>
        <div class="row">
            <div class="col-lg-12">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Medicine Name</th>
                        <th>Category</th>
                        <th>Generic Name</th>
                        <th>Manufacturer Name</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% medicines.forEach(function(item){ %>
                    <tr>
                        <td><%= item.mdicine_name %></td>
                        <td><%= item.category %></td>
                        <td><%= item.generic_name %></td>
                        <td><%= item.manufacturer_name %></td>
                        <td><a href="/admin/add_batch/<%= item.medicine_id %>">Edit</a></td>

                    </tr>
                    <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->

</div>
<!-- /#page-wrapper -->



<% include inc/view_footer.ejs %>